{
    "name": "cloudrebue/api",
    "type": "library",
    "description": "PHP Cloud Rebue Bulk sms API SDK",
    "keywords": [
        "api",
        "cloudrebue"
    ],
    "homepage": "https://github.com/cloudrebue/PHP-BULK-SDK",
    "license": "MIT",
    "authors": [
        {
            "name": "Edward Muss",
            "email": "edwardmuss5@gmail.com",
            "homepage": "https://cloudrebue.co.ke/edwardmuss",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~7.2",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "CloudRebue\\Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CloudRebue\\Api\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}